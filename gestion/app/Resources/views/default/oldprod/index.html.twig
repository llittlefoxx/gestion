{% extends 'client.html.twig' %}
{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block body %}


    {% block coname %}    {{parent()}}  Produit / Service {% endblock %}
    {{parent()}}


    <div>
        <label style="color: black;" >Rechercher </label>

        <input id="searchInput" />
        <br>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Description</th>
                <th>Fournit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="fbody">
        {% for produitService in produitServices %}
            <tr>
                <td><a href="{{ path('produitservice_show', { 'id': produitService.idprod }) }}">{{ produitService.libelle }}</a></td>
                <td>{{ produitService.description }}</td>
                <td>{% if produitService.fournit %}Yes{% else %}No{% endif %}</td>
                
                <td>
               
                            <a href="{{ path('produitservice_show', { 'id': produitService.idprod }) }}" class="btn btn-warning btn-md" role="button">Afficher</a>
                      
                            <a href="{{ path('produitservice_edit', { 'id': produitService.idprod }) }}" class="btn btn-info btn-md" role="button">Modifier</a>
                            <a href="{{ path('produitservice_del', { 'id': produitService.idprod }) }}"  class="btn btn-danger btn-md" role="button">Supprimer</a>
                 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('produitservice_new') }}" class="btn btn-success btn-md" >Ajouter un nouveau fournisseur</a>
 
    <script>
        function myFunction() {
            var x;
            if (confirm("Press a button!") == true) {
                x = "You pressed OK!";
            } else {
                x = "You pressed Cancel!";
            }
            document.getElementById("demo").innerHTML = x;
        }
    </script>  
{% endblock %}
