{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bci list</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Objet</th>
                <th>Idbci</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bci in bcis %}
            <tr>
                <td><a href="{{ path('bci_show', { 'id': bci.idbci }) }}">{{ bci.date }}</a></td>
                <td>{{ bci.objet }}</td>
                <td>{{ bci.idbci }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bci_show', { 'id': bci.idbci }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bci_edit', { 'id': bci.idbci }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bci_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
